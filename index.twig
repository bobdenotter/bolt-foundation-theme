{% extends '_master.twig' %}

{% block main %}

    <h1>{{ record.title }}</h1>

    {# Remove this block if you don't need it anymore. #}
    {% include '_fresh_install.twig' %}

    {{ record.teaser }}

    {% if record.image!="" %}
        <a href="{{ image(record.image) }}">
            <img src="{{ thumbnail(record.image, 740, 560) }}">
        </a>
    {% endif %}

    {{ record.body }}

    {% include '_recordfooter.twig' with { 'record': record } %}

{% endblock main %}